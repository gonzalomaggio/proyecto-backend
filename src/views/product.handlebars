<h1>{{title}}</h1>
<p>{{category}}</p>
<p>{{description}}</p>

{{#if photo}}
  <center><img src="/images/products/{{photo}}" alt="" /></center>
{{/if}}

{{#if isStock}}
  <p>Precio: {{price}}</p>
  <!-- Input para la cantidad -->
  <input type="number" id="quantity" value="1" min="1" required>
  <!-- Bot칩n para agregar al carrito -->
  <button onclick="addToCart('{{_id}}')">A침adir al carrito</button>
{{else}}
  <p>No hay stock del producto</p>
{{/if}}

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script>
  function addToCart(productId) {
    // Obtener la cantidad del input
    const quantity = document.getElementById('quantity').value;

    // Crear un objeto con los datos a enviar al backend
    const data = {
      productId: productId,
      quantity: quantity
    };

    // Realizar una solicitud POST al backend usando Axios
    axios.post('/api/carts', data)
      .then(function(response) {
        // Verificar si la respuesta es exitosa
        if (response.status === 200) {
          // Redirigir al usuario a la p치gina del carrito o realizar cualquier otra acci칩n deseada
          window.location.href = '/api/carts';
        } else {
          throw new Error('Error adding product to cart');
        }
      })
      .catch(function(error) {
        console.error('Error adding product to cart:', error);
        // Manejar el error, mostrar un mensaje al usuario, etc.
      });
  }
</script>
